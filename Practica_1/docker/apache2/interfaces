# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
	address 192.168.0.2
	netmask 255.255.255.0

auto eth1
iface eth1 inet static
	address 192.168.1.2
	netmask 255.255.255.0

auto eth2
iface eth2 inet static
	address 192.168.2.2
	netmask 255.255.255.0

auto eth3
iface eth3 inet static
	address 192.168.3.2
	netmask 255.255.255.0